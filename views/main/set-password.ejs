<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partial/head.ejs') %> 
    <title>Set Password</title>
</head>
<body>
    <div id="password-container">
        <form id="password-form" action="/api/v1/email-signup/set-password/<%=user.username%>?_method=PUT" method="POST">
            <div class="form-inputs">
                <% if (errors.length) { %>
                    <span id="password-errors"><%=errors%></span>
                <% } %>
                <input type="password" class="inputs" name="tempPass" placeholder="Temporary Password">
                <input type="password" class="inputs" name="newPass" placeholder="New Password">
                <input type="password" class="inputs" name="confirmNew" placeholder="Confirm New Password">
            </div>
            <div class="form-btns">
                <button id="register-btn" type="submit">Complete Registration</button>
            </div>
        </form>
    </div>
</body>
</html>